<?xml version="1.0" encoding="utf-8"?>
<preference-headers xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <header
        android:fragment="cn.edu.hqu.cst.android.chapter3_3.AppPreferenceActivity$Preference1Fragment"
        android:icon="@drawable/ic_settings_applications_black_24dp"
        android:summary="设置应用的相关选项"
        android:title="程序选项设置" />

    <header
        android:fragment="cn.edu.hqu.cst.android.chapter3_3.AppPreferenceActivity$Preference2Fragment"
        android:icon="@drawable/ic_settings_applications_black_24dp"
        android:summary="设置显示界面的相关选项"
        android:title="界面选项设置">
        <extra
            android:name="website"
            android:value="http://www.hqu.edu.cn" />
    </header>
    <header
        android:icon="@drawable/ic_settings_applications_black_24dp"
        android:summary="使用Intent启动某个Activity"
        android:title="使用Intent">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="http://cst.hqu.edu.cn" />
    </header>

</preference-headers>
